{
  "name": "tastipies",
  "version": "1.0.0",
  "description": "React-powered app to manage recipes",
  "main": "server/server.js",
  "engines": {
    "node": "8.11.4"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,css,json}\"",
    "lint": "eslint --fix \"src/**/*.{js,jsx}\"",
    "test": "export NODE_ENV=test || SET NODE_ENV=test && mocha server/tests/*.test.js",
    "test:watch": "nodemon --exec \"npm run test\"",
    "start": "export MONGODB_URI=mongodb://127.0.0.1:27017/tastipies || SET MONGODB_URI=mongodb://127.0.0.1:27017/tastipies && node server/server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": {
    "name": "Andreas Remdt",
    "email": "andreas.remdt@gmail.com",
    "url": "https://andreasremdt.com"
  },
  "keywords": [
    "node",
    "express",
    "react",
    "mongoose"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andreasremdt/tastipies.git"
  },
  "bugs": {
    "url": "https://github.com/andreasremdt/tastipies/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "expect": "^23.6.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.15"
  }
}
